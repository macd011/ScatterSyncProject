{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",  // ✅ Fix JSX error
    "types": ["node"],      // ✅ Ensure Node types are included
    "lib": ["dom", "esnext"], // ✅ Ensure DOM and ES features are available
    "moduleResolution": "node" // ✅ Fix import resolution
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
